<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matthieu.bluetooth_com.ConnectionActivity"
    tools:showIn="@layout/activity_connection">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/device_name_text"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/device_adr_text"
        android:layout_below="@+id/device_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/connection_status"
        android:layout_below="@+id/loading_spinner"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <ProgressBar android:id="@+id/loading_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:progressDrawable="@drawable/circleprogressbar"
        android:indeterminateDrawable="@drawable/circleprogressbar"
        android:layout_below="@+id/device_adr_text"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:id="@+id/progressBar"
        android:progress="0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:progressDrawable="@drawable/progressbardrawable" />

</RelativeLayout>

